<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal"
tools:context="com.example.ananth.courtcounter.MainActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_teamA"
            android:textSize="32sp"
            tools:text="Team A"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_score_teamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            tools:text="0"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/button_3_teamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/button_2_teamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/button_1_teamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/button_neg1_teamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="24sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_teamB"
            android:textSize="32sp"
            tools:text="Team B"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_score_teamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="64sp"
            tools:text="0"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/button_3_teamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/button_2_teamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/button_1_teamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/button_neg1_teamB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="24sp"/>

    </LinearLayout>




</LinearLayout>
